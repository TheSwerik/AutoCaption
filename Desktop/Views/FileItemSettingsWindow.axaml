<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Desktop.Views.FileItemSettingsWindow"
        x:DataType="vm:FileItemSettingsViewModel"
        Icon="/Assets/avalonia-logo.ico"
        TransparencyLevelHint="AcrylicBlur" Background="Transparent" ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Stretch"
        Title="AutoCaption">
    <Design.DataContext>
        <vm:FileItemSettingsViewModel />
    </Design.DataContext>

    <Panel Margin="10 30 10 10">
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <DockPanel Margin="20"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   LastChildFill="True">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Bottom">

                <Button Width="100"
                        HorizontalContentAlignment="Center"
                        Command="{Binding SaveCommand}">
                    Save
                </Button>
                <Button Width="100"
                        HorizontalContentAlignment="Center"
                        Command="{Binding CancelCommand}">
                    Cancel
                </Button>
            </StackPanel>

            <StackPanel Spacing="5"
                        VerticalAlignment="Stretch">

                <TextBlock Text="{Binding File.Path}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label Target="Output">OutputLocation:</Label>
                    <TextBox Name="Output"
                             Text="{Binding File.OutputLocation}">
                        <Interaction.Behaviors>
                            <EventTriggerBehavior EventName="GotFocus">
                                <InvokeCommandAction Command="{Binding SelectOutputLocationCommand}" />
                            </EventTriggerBehavior>
                        </Interaction.Behaviors>
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label Target="Language">Language:</Label>
                    <TextBox Name="Language"
                             Text="{Binding File.Language}">
                        <Interaction.Behaviors>
                            <EventTriggerBehavior EventName="GotFocus">
                                <InvokeCommandAction Command="{Binding SelectLanguageCommand}" />
                            </EventTriggerBehavior>
                        </Interaction.Behaviors>
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label Target="Splitting">Splitting:</Label>
                    <CheckBox Name="Splitting"
                              IsChecked="{Binding File.DoSplitting}" />
                </StackPanel>

            </StackPanel>
        </DockPanel>
    </Panel>
</Window>